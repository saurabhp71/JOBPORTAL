                                </div>
                            </div>
                            <div class="group">
                                <label for="pass" class="label" style="color:whitesmoke;">Password</label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Password1, new { htmlAttributes = new { @class = "input", type = "password", placeholder = "Password" } })

                                    @Html.ValidationMessageFor(model => model.Password1, "", new { @class = "text-danger" })
                                </div>

                            </div>
                            <div class="group">
                                <input id="check" type="checkbox" class="check" checked>
                                <label for="check"><span class="icon"></span> Keep me Signed in</label>
                            </div>
                            <div class="group">
                                <input type="submit" value=" Sign In" class="button" />
                            </div>
                            <div class="foot-lnk">
                                <a href="@Url.Action("forgotpassword","Account")">Forgot Password?</a>
                            </div>
                            <p style="color:white;margin-left:180px;">OR</p>
                            <div style="margin-left:165px;">

                                <a href="@ViewBag.response">

                                    <img src="~/Content/images/icons8-google-48.png" />

                                </a>

                            </div>


                        </div>

                    }
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @enctype = "multipart/form-data" }))

                    {
                        <div class="sign-up-htm">
                            <div class="group">
                                <label for="user" class="label" style="color:whitesmoke;">Username</label>
                                <div class="col-md-15">
                                    @Html.EditorFor(model => model.SeekerName, new { htmlAttributes = new { PlaceHolder = "Display Name", @class = "input" } })
                                    @Html.ValidationMessageFor(model => model.SeekerName, "", new { @class = "text-danger",@style= "color:red;" })
                                </div>
                            </div>
                            <div class="group">
                                <label for="pass" class="label" style="color:whitesmoke;">EmailId</label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.EmailId, new { htmlAttributes = new { PlaceHolder = "Email", @class = "input" } })
                                    @Html.ValidationMessageFor(model => model.EmailId, "", new { @class = "text-danger", @style = "color:red;" })
                                </div>
                            </div>
                            <div class="group">
                                <label for="pass" class="label" style="color:whitesmoke;">Contact Number</label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.ContactNo, new { htmlAttributes = new { PlaceHolder = "ContactNo", @class = "input" } })
                                    @Html.ValidationMessageFor(model => model.ContactNo, "", new { @class = "text-danger", @style = "color:red;" })
                                </div>
                            </div>
                            <div class="group">
                                <label for="pass" class="label" style="color:whitesmoke;">Password</label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { PlaceHolder = "Password", @class = "input" } })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger", @style = "color:red;" })
                                </div>
                            </div>
                            <div class="group">
                                <label for="pass" class="label" style="color:whitesmoke;">Re-Enter Password</label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.RePassword, new { htmlAttributes = new { PlaceHolder = "Confirm-Password", @class = "input" } })
                                    @Html.ValidationMessageFor(model => model.RePassword, "", new { @class = "text-danger", @style = "color:red;" })
                                </div>
                            </div>
                            <div class="group">
                                <label for="pass" class="label" style="color:whitesmoke;">Category</label>
                                <div class="col-md-10">
                                    @Html.DropDownListFor(model => model.Category, new SelectList(ViewBag.list), "--Select--", htmlAttributes: new { @class = "input", @style = "color:black;" })
                                    @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger", @style = "color:red;" })
                                </div>
                            </div>
                            <div class="group">
                                <input type="submit" class="button" value="Sign Up">
                            </div>
                            <div class="hr"></div>
                            <div class="foot-lnk">
                                <label for="tab-1" style="color:red">@ViewBag.Message</label>

                            </div>
                            @*<div class="foot-lnk">
                                <label for="tab-1">Already Member?</label>
                            </div>*@
                        </div>
                    }
                </div>
            </div>
        </div>


    </body>
</html>
