                <div class="login-form">
                    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @enctype = "multipart/form-data" }))

                    {
                        <div class="sign-in-htm">
                            <div class="group">
                                <label for="user" class="label" style="color:whitesmoke;">Username</label>
